<div class="container">
  <div class="row">
    <div class="col s12 m12 l12 xl12 center">
      <div class="card z-depth-5">
        <div class="card-content black-text">
          <span class="card-title">Card Title</span>
            <p>
              <strong>Title:</strong>
              <%= @blog.title %>
            </p>

            <p>
              <strong>Subtitle:</strong>
              <%= @blog.subtitle %>
            </p>

            <p>
              <strong>Body:</strong>
              <%= @blog.body %>
            </p>
        </div>
        <div class="card-action">
          <a href="#"><%= link_to 'Edit', edit_blog_path(@blog), class: "waves-effect waves-light btn" %></a>
          <a href="#"><%= link_to 'Back', blogs_path, class: "waves-effect waves-light btn" %></a>
        </div>
      </div>
    </div>
  </div>
</div>


